<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="{Binding Name}" BackgroundColor="#F9F9F9" 
             x:Class="MRWMO.Chapters">
    <ContentPage.Content >
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Book Image -->
                <Image Source="{Binding Image}"
                   Aspect="AspectFit"
                   HeightRequest="250"
                   HorizontalOptions="Center" />

                <!-- Book Title -->
                <Label Text="{Binding Name}"
                   FontSize="24"
                   FontAttributes="Bold"
                       FontFamily="AbhayaLibreM"
                   HorizontalOptions="Center"
                   TextColor="#222" />

              
                <!-- Section Heading -->
                <Label
                     x:Name="chapterTitleLabel"
                    Text=""
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#444" />

                <!-- Chapter List (clickable) -->
                <VerticalStackLayout>
                    <CollectionView ItemsSource="{Binding Chapters}"
                                SelectionMode="Single"
                                SelectionChanged="ChapterSelected"
                                >
                        <!-- disable internal scroll -->
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,5"
                                   BorderColor="#ddd"
                                   CornerRadius="10"
                                   Padding="15"
                                   HasShadow="False"
                                        InputTransparent="True">
                                    <Label
                                        Text="{Binding Name}"
                                           FontFamily="AbhayaLibreM"
                                       FontSize="16"
                                       TextColor="#222" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
               
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>