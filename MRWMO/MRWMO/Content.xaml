<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="" BackgroundColor="#F9F9F9" 
             x:Class="MRWMO.Content">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToggleSettings_Clicked" Text="Share" IconImageSource="ic_action_settings.png" Order="Primary"  Priority="0" ></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnContentTapped" />
            </VerticalStackLayout.GestureRecognizers>

            <!-- Inline Settings Panel (now expanded with icons and buttons) -->
            <StackLayout x:Name="SettingsPanel"
              IsVisible="False"
              Spacing="10"
              Padding="10"
              BackgroundColor="#F0F0F0"
              Margin="0,0,0,10">

                <!-- Actions row -->
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <ImageButton Source="ic_action_zoom_in.png"
    Clicked="ToolbarItem_Clicked_Plus"
    WidthRequest="35"
    HeightRequest="35"
    BackgroundColor="#ccc" />
                    <ImageButton Source="ic_action_zoom_out.png"
    Clicked="ToolbarItem_Clicked_Minus"
    WidthRequest="35"
    HeightRequest="35"
    BackgroundColor="#ccc" />
                    <ImageButton Source="ic_action_skip_previous.png"
                      Clicked="ToolbarItem_Clicked_Back"
                      WidthRequest="35"
                      HeightRequest="35"
                      BackgroundColor="#ccc" />
                    <ImageButton Source="ic_action_skip_next.png"
                      Clicked="ToolbarItem_Clicked_Next"
                      WidthRequest="35"
                      HeightRequest="35"
                      BackgroundColor="#ccc" />
                    <ImageButton x:Name="BookMarkToolBarItem"
                                 Source="ic_action_bookmark_border.png"
                      Clicked="ToolbarItem_Clicked_BookMark"
                      WidthRequest="35"
                      HeightRequest="35"
                      BackgroundColor="#ccc" />
                    <ImageButton x:Name="PlayToolBarItem" Source="ic_action_play_arrow.png"
                      Clicked="PlayToolBarItem_Clicked"
                      WidthRequest="35"
                      HeightRequest="35"
                      BackgroundColor="#ccc" />
                    <ImageButton x:Name="ShareToolBarItem" Source="ic_action_share.png"
                      Clicked="ShareToolBarItem_Clicked"
                      WidthRequest="35"
                      HeightRequest="35"
                      BackgroundColor="#ccc" />
                </HorizontalStackLayout>
            </StackLayout>
            <!-- Header with cog -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="{Binding Name}"
                       FontSize="22"
                       FontAttributes="Bold"
                       FontFamily="AbhayaLibreM"
                       HorizontalTextAlignment="Center"
                       TextColor="#222" />
            </Grid>


            <!-- Chapter Content -->
            <Label x:Name="contents"
                   Text="{Binding Content}"
                   FontSize="13"
                   TextColor="#444"
                   FontFamily=""
                   LineHeight="1.3"
                   HorizontalTextAlignment="Justify" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>