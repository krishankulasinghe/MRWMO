<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Padding="0"
             BackgroundColor="Black" Title=""
             x:Class="MRWMO.English">


    <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout>

            <!-- Top Grid with text and image -->
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Row="0" Grid.Column="0" Margin="20,0,20,0" Spacing="20">
                    <Label
                     FontAttributes="Bold"
                     FontSize="18"
                     FontFamily="AbhayaLibreM"
                     Text="Let go of everything.&#10;Then you will gain everything.&#10;
When everything is yours, you will realize you need nothing.&#10;
Because you have understood that all things are impermanent..."
                     TextColor="White"
                     VerticalOptions="Start"
                     HorizontalOptions="Fill" />
                </StackLayout>

                <Image Grid.Row="0" Grid.Column="1"
                    HorizontalOptions="Center"
                    Source="ic_thero"
                    WidthRequest="200" />
            </Grid>

            <!-- Bottom section -->
            <Border
             Margin="0,30,0,0"
             Padding="30,0,30,30"
             BackgroundColor="White"
             StrokeShape="RoundRectangle 40,40,0,0"
             VerticalOptions="FillAndExpand">
                <StackLayout>

                    <!-- Title -->
                    <Label
                     Margin="20"
                     FontAttributes="Bold"
                     FontSize="24"
                     HorizontalOptions="CenterAndExpand"
                     HorizontalTextAlignment="Center"
                     FontFamily=""
                     Text="Giving Up Articles"
                     TextColor="#333533"
                     VerticalOptions="Center" />

                    <!-- CollectionView -->
                    <CollectionView SelectionMode="Single"
                                 SelectionChanged="CollectionView_SelectionChanged"
                                 ItemsSource="{Binding .}"
                                 ItemsLayout="VerticalGrid, 2">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Vertical"
                                          BackgroundColor="#FFFFFF"
                                          Margin="8">
                                    <Border
                                     BackgroundColor="Transparent"
                                     Padding="0">
                                        <Image Source="{Binding Image}" Aspect="AspectFit"  HeightRequest="250"  />
                                    </Border>
                                    <Label Text="{Binding Name}"
                                        FontSize="13"
                                        FontFamily="AbhayaLibreM"
                                        TextColor="#333533"
                                        HorizontalOptions="Center"
                                       />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>